// 名值对标签
.kvpair
    display: inline-grid
    grid-template-columns: auto auto
    grid-template-rows: auto auto
    place-items: center

.kvpair
    // 边框和补白
    & .key, & .val
        padding: .08rem
        border: 1px solid var-gray
    & .val
        border-left: none
    // 圆角
    & .key.cir
        border-radius: $cir-angle 0 0 $cir-angle
    & .val.cir
        border-radius: 0 $cir-angle $cir-angle 0
