// 缓存页 选项卡标签
.tabsbox
    display: flex
    position: relative
    height: 44px
    border: 1px solid var-gray
    border-bottom: 2px solid var-gray
    background-color: var-gray-dk
    -webkit-user-select: none
    -moz-user-select: none
    -ms-user-select: none
    user-select: none
// 左右导航按钮
.tabsbox
    &-left, &-right
        flex: 0 1 36px
        cursor: pointer
        padding: 8px 0
        background-color: var-white
    &-right
        text-align: right
    &-left:before, &-right:before
        content: ''
        vertical-align: middle
    // 按钮三角形
    &-left:before
        content: ''
        triangle(12px, left, var-gray-dk)
    &-right:before
        content: ''
        triangle(12px, right, var-gray-dk)
    &-left:hover, &-right:hover
        background-color: var-gray
    // 按钮点击时
    &-left:active, &-right:active
        background-color: var-gray-lt
// 右侧功能菜单按钮
.tabsbox
    &-menutitle
        width: 80px
        text-align: center
        padding: 10px
        background-color: var-white
    // 按钮三角形
    &-menutitle:after
        content: ''
        triangle(5px, bottom, var-gray-dk)
        margin-left: 4px
        vertical-align: middle
    &-menutitle:hover
        background-color: var-gray
    // 鼠标移入时,显示其下菜单项目
    &-menutitle:hover ~ &-menugroup
        display: block
// 菜单项框
.tabsbox
    &-menugroup
        display: none
        position: absolute
        top: 39px
        right: 0
        width: 100px
        color: var-gray-dk
        text-align: center
        background-color: var-white
        border: 2px solid var-gray-dk
        border-top: none
        cursor: pointer
    &-menugroup:hover
        display: block
    // 功能菜单项
    &-close-all, &-close-other, &-goto-active
        padding: 10px
        display: block
    // 第1个菜单项加个下边
    &-goto-active
        border-bottom: 1px solid var-gray
    // 菜单项hover
    &-close-all:hover, &-close-other:hover, &-goto-active:hover
        color: var-font-color
        background-color: var-gray-dk
// tabs框
.tabsbox
    // 选项卡包装框
    &-navbox
        flex: 1 1 0
        width: 0
        overflow: hidden
    // 选项卡框
    &-nav
        position: relative
        margin-right: 100px
        white-space: nowrap
        overflow-x: auto
        background-color: var-gray-lt
    // 选项卡
    &-tab
        display: inline-block
        position: relative
        padding: 10px 15px
        height: 40px
        margin: 0 2px
        background-color: var-gray-dk
        cursor: pointer
    // hover时,增大padding-right,为右上角关闭按钮取得空间
    &-tab:hover
        color: var-gray-lt
        padding-right: 24px
        transition: padding-right $duration
    // 活动的选项卡
    &-tab.active
        color: var-white
        background-color: var-font-color
    // 选项卡关闭按钮
    &-tabclose
        display: none
        position: absolute
        width: 16px
        height: 16px
        line-height: 16px
        text-align: center
        color: var-white
        top: 0
        right: 0
        background-color: #CC0000
        text-decoration: none
    // 鼠标移入选项卡,显示关闭按钮
    &-tab:hover &-tabclose
        display: inline-block
// 颜色 导航底边,活动选项卡,右边功能菜单框左和下边框,导航三角形
for key, val in $themeColorsKV
    .tabsbox
        &.{key}
            border-color: val[0]
        &.{key} &-tab.active
            background-color: val[0]
        &.{key} &-menugroup
            border-color: val[0]
            border-top: none
        &.{key} &-left:before
            border-right-color: val[0]
        &.{key} &-right:before
            border-left-color: val[0]
