// 信息提示框
.msgshow
    display: block
    padding: 0.8em
    background-color: var-gray-lt
    border-radius: $cir-angle
    & .title
        font-weight: 600
    & .msg
        margin-left: 1em
    & .close
        float: right
        cursor: pointer
// 颜色
for key, val in $themeColorsKV
    .msgshow.{key}
        background-color: val[2]
        color: val[1]