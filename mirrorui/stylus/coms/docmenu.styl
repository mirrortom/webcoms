/**
    文档菜单
*/
.docmenu
    display: block
    // 每个菜单组是一个ul
    &-group
        list-style: none
    // 嵌套子菜单组的缩进
    &-group &-group
        margin-left: 1em
    // 菜单项
    &-item
        display: block
        text-decoration: none
        padding: 4px 0 4px 2em
        font-weight: 400
        cursor: pointer
        @extend .text-overflow
    // 菜单项hover,菜单项加上下划线
    &-item:not(.active):hover
        text-decoration: underline
    // 菜单项选中
    &-item.active
        font-weight: 600
        background-color: var-gray-lt
    // 菜单组标题
    &-title
        display: flex
        align-items: center
        font-weight: 700
        padding: 4px 0
        cursor: pointer

    // 菜单组标题 收起/展开图标
    &-open, &-close
        display: inline-block
        position: relative
        width:1em
        height:1em
    &-open:before, &-close:before
        content:''
        display:inline-block
        position: absolute
        width:.7em
        height:.7em
        border: 2px solid currentColor
        border-right: none
        border-bottom: none
    // close
    &-open:before
        bottom: .396em
        left: 50%
        transform: translateX(-50%) rotate(-135deg)
    &-close:before
        right: .396em
        top: 50%
        transform: translateY(-50%) rotate(135deg)
    // 菜单组关闭
    &-group-close li:not(:first-child)
        display: none