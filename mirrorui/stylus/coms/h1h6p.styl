// Headings h1-6大标题
h1, h2, h3, h4, h5, h6
    font-family: inherit
    font-weight: 600
    line-height: 1.1
    color: inherit
    background-color: inherit
    margin: 8px auto
h1
    font-size: $font-size-3xl
h2
    font-size: $font-size-2xl
h3
    font-size: $font-size-xl
h4
    font-size: $font-size-lg
h5
    font-size: $font-size-md
h6
    font-size: $font-size-base
// p标记
p
    margin: 0 0 16px
    line-height: 1.8em