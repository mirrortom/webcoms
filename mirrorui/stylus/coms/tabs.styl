.tabs
    // 外层框
    &-box
        position: relative
    // 选项卡框
    &-header
        display: flex
        border-bottom: 1px solid var-gray-dk
    // 选项卡
    &-label
        flex: 0 1 auto
        padding: 0 15px
        height: 31px
        line-height: 30px
        background-color: var-gray-lt
        color: var-font-color
        cursor: pointer
    // 选项卡均分整行
    &-box.full &-label
        flex: 1 1 0
    // 选项卡激活时颜色
    &-label.active, &-box.list &-label.active
        background-color: var-gray-dk
        color: var-white
    // 面板
    &-panel
        display: none
    // 活动面板
    &-panel.active
        display: block
// 竖向的
.tabs
    // 外层框
    &-box.list
        display: grid
        grid-template-columns: 108px auto
    // 选项卡框
    &-box.list &-header
        display: block
        border: none
        border-right: 2px solid var-gray-dk
    // 选项卡
    &-box.list &-label
        height: auto
        line-height: normal
        display: block
        padding: 10px
        background-color: var-gray
        color: var-font-color
        cursor: pointer
        text-align: center
// 颜色
.tabs
    for key, val in $themeColorsKV
        // 选项卡框底边色
        &-box.{key} &-header
            border-bottom-color: val[0]
        &-box.list.{key} &-header
            border-right-color: val[0]
        // 选项卡激活时色
        &-box.{key} &-label.active, &-box.list.{key} &-label.active
            background-color: val[0]