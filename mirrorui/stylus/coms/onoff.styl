// 开关 swtich ON / OFF
.switch
    display: inline-block
    width: 5em
    line-height: 1.5em
    padding: 4px .8em
    border: 1px solid var-gray-dk
    border-radius: 1em
    background-color: var-gray
    user-select: none
    transition: background-color 1s

.switch.checked
    text-align: right
    background-color: var-black-lt
    color: var-white

// 颜色
for key, val in $themeColorsKV
    .switch.checked.{key}
        background-color: val[0]
        border-color: val[1]