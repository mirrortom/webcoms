// ==开关 swtich ON / OFF==//
{$selector-switch}
    // 主题色变量
    --t-switch-checked-bg-color:$gray['7']// 选中(开)背景色
    --t-switch-tag-color:$gray['4']// 标记/文字色
    //
    display:inline-flex
    align-items: center
    border: 1px solid $border-color
    user-select:none
    min-width: 3em
    padding: .1em .3em
    border-radius: .6em
    transition: background-color $duration
    color:var(--t-switch-tag-color)

    &.checked
        justify-content: end
        color:$white['0']
        background-color: var(--t-switch-checked-bg-color)

    // 开关切换图标.如果写成:not([on],[off])好像不行
    &:not([on]):not([off]):before
        content:''
        border-radius: 50%
        width:1em
        height:1em
        background-color:var(--t-switch-tag-color)
    &.checked:before
        background-color:$white['1']

if $themeDark==1
    {$themePre}-dark {$selector-switch}
        --t-switch-checked-bg-color:$gray['6']// 选中(开)背景色
if $themeColor==1
    // 彩色主题
    for k,v in $colors-dict
        {$selector-switch}.{k}
            --t-switch-checked-bg-color:v['6']// 选中(开)背景色