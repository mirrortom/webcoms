// 弹出框
.msgbox
    // 遮罩
    &-shadow
        @extend $ext-position-fixed
        @extend $ext-position-0
        opacity: 0.4
        background-color: #000
        z-index: 10000
    // 父层
    &-modal
        @extend $ext-display-flex
        @extend $ext-justify-center
        @extend $ext-position-fixed
        @extend $ext-position-0
        @extend $ext-overflow-x-hidden
        @extend $ext-overflow-y-auto
        z-index: 10001
    // 弹出框
    &
        @extend $ext-position-relative
        width: 75vw
        height: 120px
        padding: 20px
        background-color: var(--back-color)
// 输入框高度大一些
.msgbox-prompt
    height: 140px
.msgbox
    // 位置中
    &-center
        align-self: center
    // 位置上
    &-top
        align-self: flex-start
    // 位置下
    &-bottom
        align-self: flex-end
// 弹出框按钮
.msgbox
    &-ok,&-cancel
        @extend $ext-position-absolute
        bottom: 1em
    &-ok
        left: 80%
    &-cancel
        left: 60%

// PC屏
@media only screen and (min-width: $screen-tablet)
    .msgbox
        width: 360px
