// 列表 ul ol
.list
    padding-left: 0
    list-style: none
.list > li
    padding: 6px 0 6px 1em
// 嵌套时加padding-left
.list .list
    padding-left: 12px
// 方块~圆 风格
.list
    &.square > li::before, &.cir > li::before
        content: ''
        display: inline-block
        width: .6em
        height: .6em
        background-color: #000
        margin-right: 6px
    &.cir > li::before
        border-radius: 50%
// 方块,圆的主题色
for key, val in $themeColorsKV
    .list.square.{key} > li::before
        background-color: val[0]
    .list.cir.{key} > li::before
        background-color: val[0]
// 数值列样式,abc列样式
.list
    &.num,&.abc
        counter-reset: li-item
    &.num > li::before,&.abc > li::before
        counter-increment: li-item;
    &.num > li::before
        content: counters(li-item,'.') '. ';
    &.abc > li::before
        content: '(' counters(li-item,'.',lower-latin) ') '