// 文本超出时,显示省略号.需要有宽度max-width 或者width
.text-overflow
    max-width: 100%
    overflow: hidden
    text-overflow: ellipsis
    white-space: nowrap
// 文字大小
for key, val in $fontSizeKV
    .text-{key}
        font-size: val !important
// 文本对齐
.text-left
    text-align: left !important
.text-right
    text-align: right !important
.text-center
    text-align: center !important
// 文本段落空2em
.text-s
    text-indent: 2em
// 文字主题色
for key, val in $themeColorsKV
    .text-{key}
        color: val[0] !important
    .text-{key}se
        color: val[1] !important
    .text-{key}lt
        color: val[2] !important
.text-white
    color: var-white !important
.text-gray
    color: var-gray !important
.text-grayse
    color: var-grayse !important
.text-graylt
    color: var-graylt !important
// 背景主题色
for key, val in $themeColorsKV
    .bg-{key}
        background-color: val[0] !important
    .bg-{key}se
        background-color: val[1] !important
    .bg-{key}lt
        background-color: val[2] !important
.bg-white
    background: var-white !important
.bg-gray
    background: var-gray !important
.bg-grayse
    background: var-grayse !important
.bg-graylt
    background: var-graylt !important
.bg-dark
    background: var-font-color !important
// margin padding 固定设定便利类
for size in range(5, 50, 5)
    sizepx = size * 1px
    .mg-{size}
        margin: sizepx
    .mg-tb-{size}
        margin-top: sizepx
        margin-bottom: sizepx
    .mg-t-{size}
        margin-top: sizepx
    .mg-b-{size}
        margin-bottom: sizepx
    .mg-lr-{size}
        margin-left: sizepx
        margin-right: sizepx
    .mg-l-{size}
        margin-left: sizepx
    .mg-r-{size}
        margin-right: sizepx
    .pd-{size}
        padding: sizepx
    .pd-tb-{size}
        padding-top: sizepx
        padding-bottom: sizepx
    .pd-t-{size}
        padding-top: sizepx
    .pd-b-{size}
        padding-bottom: sizepx
    .pd-lr-{size}
        padding-left: sizepx
        padding-right: sizepx
    .pd-l-{size}
        padding-left: sizepx
    .pd-r-{size}
        padding-right: sizepx
// display:none block 便利类
.d-none
    display: none !important
.d-block
    display: block !important
// display:none block 针对不同屏幕隐藏或者显示
mediaquerydisplay(screen-type)
    .d-{screen-type}-none
        display: none !important
    .d-{screen-type}-block
        display: block !important
// 小屏幕 >576
@media only screen and (min-width: $screen-phone)
    mediaquerydisplay(sm)
// 小平板 > 768
@media only screen and (min-width: $screen-tablet)
    mediaquerydisplay(md)
// 大平板   > 992
@media only screen and (min-width: $screen-bigtablet)
    mediaquerydisplay(lg)
// pc > 1200
@media only screen and (min-width: $screen-pc)
    mediaquerydisplay(xl)
