// range 滑块
.range-box
    display: block
    padding-bottom: 20px


.range-bar
    width: 100%
    height: 10px
    border-radius: 4px
    background-color: var-gray-lt
    margin-top: 5px


.range-btn
    display: inline-block
    width: 20px
    height: 20px
    background-color: var-gray-dk
    border-radius: 50%
    margin-top: -5px


.range-btn.active
    box-shadow: 0px 0px 4px var-black-lt
    cursor: grab
  

.range-txt
    display: block
    width: 20px
    text-align: center
