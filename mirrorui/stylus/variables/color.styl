// -- 基本颜色和字体变量 有对应的css变量定义,便于引用 --//
// 字体黑色
$font-color = #343a40

// 白色
$white = #fff
var-white = var(--white)

// 半透明黑色,用于一般hover
$black50 = #00000050
var-black50 = var(--black50)

// 前景色
var-font-color = var(--font-color)

// 背景色
var-body-color = var(--body-bgcolor)

// 灰色(默认颜色) 第一个lt是减轻色 第2个se是加重色,后同
$gray = #dee2e6
$graylt = lighten($gray, 50%)
$grayse = darken($gray, 15%)
var-gray = var(--gray)
var-graylt = var(--graylt)
var-grayse = var(--grayse)

// 主题颜色 
$primary = #6C6
$primarylt = lighten($primary, 50%)
$primaryse = darken($primary, 15%)
var-primary = var(--primary)
var-primarylt = var(--primarylt)
var-primaryse = var(--primaryse)
// 红色警示
$danger = #dc3545
$dangerlt = lighten($danger, 50%)
$dangerse = darken($danger, 15%)
var-danger = var(--danger)
var-dangerlt = var(--dangerlt)
var-dangerse = var(--dangerse)
// 绿色成功
$success = #28a745
$successlt = lighten($success, 50%)
$successse = darken($success, 15%)
var-success = var(--success)
var-successlt = var(--successlt)
var-successse = var(--successse)
// 黄色警示
$warning = #ffc107
$warninglt = lighten($warning, 50%)
$warningse = darken($warning, 15%)
var-warning = var(--warning)
var-warninglt = var(--warninglt)
var-warningse = var(--warningse)
// 蓝色提示
$info = #17a2b8
$infolt = lighten($info, 50%)
$infose = darken($info, 15%)
var-info = var(--info)
var-infolt = var(--infolt)
var-infose = var(--infose)
// 主题颜色css变量KV对-用于for循环,key是主题class名,
// val值是一个数组,0位是主题色css变量,1位是颜色加深的css变量,2位是减淡色
$themeColorsKV = {
    primary: (var-primary var-primaryse var-primarylt),
    danger: (var-danger var-dangerse var-dangerlt),
    success: (var-success var-successse var-successlt),
    info: (var-info var-infose var-infolt),
    warning: (var-warning var-warningse var-warninglt)
}