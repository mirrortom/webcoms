    for size in range(start,end,step)
        sizepx = size * 1px
        .mg-{size}
            margin: sizepx
        .mg-tb-{size}
            margin-top: sizepx
            margin-bottom: sizepx
        .mg-t-{size}
            margin-top: sizepx
        .mg-b-{size}
            margin-bottom: sizepx
        .mg-lr-{size}
            margin-left: sizepx
            margin-right: sizepx
        .mg-l-{size}
            margin-left: sizepx
        .mg-r-{size}
            margin-right: sizepx
        .pd-{size}
            padding: sizepx
        .pd-tb-{size}
            padding-top: sizepx
            padding-bottom: sizepx
        .pd-t-{size}
            padding-top: sizepx
        .pd-b-{size}
            padding-bottom: sizepx
        .pd-lr-{size}
