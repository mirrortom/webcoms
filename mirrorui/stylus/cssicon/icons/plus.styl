// 加号

.ico-plus
    position: relative
    width: 1em
    height: 1em
    
    &:before, &:after
        content: ''
        display: inline-block
        position: absolute
        left: 0
        right: 0
        top: 0
        bottom: 0
        margin: auto
        box-shadow: inset 4px 4px

    &:before
        width: 1em
        height: 4px

    &:after
        width: 4px
        height: 1em
    