// 程序代码

.ico-code
    position: relative

    &:before,&:after
        position: absolute
        left: 0
        right: 0
        bottom:0
        top:0
        margin: auto

    &:before
        width: .04em
        min-width:1px
        height: .8em
        background-color:currentColor
        transform: rotate(15deg)
 
    &:after
        width: .9em
        height: .4em
        background-image: linear-gradient(45deg,transparent .12em,currentColor .12em .16em,transparent .16em),linear-gradient(-45deg,transparent .12em,currentColor .12em .16em,transparent .16em),linear-gradient(135deg,transparent .12em,currentColor .12em .16em,transparent .16em),linear-gradient(-135deg,transparent .12em,currentColor .12em .16em,transparent .16em)