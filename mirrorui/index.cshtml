          success: ['#48BB78', '#2F855A', '#22543D'],
          danger: ['#F56565', '#C53030', '#742A2A'],
          info: ['#4299E1', '#2B6CB0', '#2A4365'],
          warning: ['#ED8936', '#C05621', '#7B341E']
        };
      }
      if (themeId == 'teal') {
        return {
          font_color: ['#2D3748'],
          body_bgcolor: ['#fefefe'],
          gray: ['#EDF2F7', '#CBD5E0', '#718096'],
          primary: ['#B2F5EA', '#4FD1C5', '#319795'],
          success: ['#9AE6B4', '#48BB78', '#2F855A'],
          danger: ['#FEB2B2', '#F56565', '#C53030'],
          info: ['#A3BFFA', '#667EEA', '#4C51BF'],
          warning: ['#FBD38D', '#ED8936', '#C05621']
        };
      }
      if (themeId == 'pink') {
        return {
          font_color: ['#2D3748'],
          body_bgcolor: ['#fefefe'],
          gray: ['#eef1f3', '#dee2e6', '#b7c0c9'],
