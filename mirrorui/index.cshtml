    // chg theme
    function chgtheme(themeId) {
      let colors = themeColors(themeId);
      for (let colorKey in colors) {
        if (colors[colorKey].length < 3) {
          document.documentElement.style.setProperty(`--${colorKey.replace('_', '-')}`, colors[colorKey][0]);
          continue;
        }
        document.documentElement.style.setProperty(`--${colorKey}`, colors[colorKey][1]);
        document.documentElement.style.setProperty(`--${colorKey}se`, colors[colorKey][2]);
        //
        document.querySelector(`#themecolorshowbox td.bg-${colorKey}lt`).innerHTML = colors[colorKey][0];
        document.querySelector(`#themecolorshowbox td.bg-${colorKey}`).innerHTML = colors[colorKey][1];
        document.querySelector(`#themecolorshowbox td.bg-${colorKey}se`).innerHTML = colors[colorKey][2];
      }
    }
    // chg font-size
    function chgfontsize(size) {
      document.documentElement.style.setProperty('--font-size', size + 'px');
    }
    // pink主题色
